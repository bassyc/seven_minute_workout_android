                android:name="android.support.PARENT_ACTIVITY"
                android:value="WorkoutListActivity" />
        </activity>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="3fb5327e30111ad3ebb87c0769045f97c142cf2c" />

